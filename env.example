# Backend Configuration
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:postgres@db:5432/ai_presentation
DATABASE_URL_SYNC=postgresql://postgres:postgres@db:5432/ai_presentation
APP_PORT=8001

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_BASE_URL=/api

# CORS Configuration
# Укажите домены через запятую для production (например: https://yourdomain.com,https://www.yourdomain.com)
# Для разработки можно оставить localhost origins
CORS_ORIGINS=http://localhost:80,http://localhost:5173,http://127.0.0.1:80

# Опционально: токен HuggingFace для доступа к приватным моделям
# Получите токен на https://huggingface.co/settings/tokens
# Необходим только для приватных моделей или для увеличения лимитов загрузки
# HF_TOKEN=your_huggingface_token_here
# Отключить XET/CAS (часто ломает загрузку моделей в Docker/проксированных сетях)
# HF_HUB_DISABLE_XET=1

# Таймаут генерации контента (в секундах, по умолчанию 600 = 10 минут)
# Увеличьте это значение, если генерация часто прерывается по таймауту
# Рекомендации:
#   - Для GPU: 300-600 секунд (5-10 минут)
#   - Для CPU: 1200-1800 секунд (20-30 минут)
# ВАЖНО: Если увеличиваете это значение, также увеличьте proxy_read_timeout в nginx.conf
# (proxy_read_timeout должен быть >= LLM_GENERATION_TIMEOUT_SEC + запас 300 секунд)
# LLM_GENERATION_TIMEOUT_SEC=600

# Настройки GPU/CUDA
# Установите false для использования GPU (требуется минимум 12GB VRAM для обеих моделей)
# Если установлено true, обе модели (Qwen и Stable Diffusion) будут использовать CPU
# Для RTX 50xx серии требуется PyTorch 2.10.0+ с CUDA 13.0 или выше
FORCE_CPU=false

# Настройки локального Stable Diffusion для генерации изображений
# Модель для генерации (по умолчанию SDXL 1.0 base)
# Популярные модели:
#   - runwayml/stable-diffusion-v1-5 (быстрая, ~4GB VRAM)
#   - stabilityai/stable-diffusion-2-1 (лучше качество, ~5GB VRAM)
#   - stabilityai/stable-diffusion-xl-base-1.0 (лучшее качество, ~7GB VRAM)
STABLE_DIFFUSION_MODEL_ID=stabilityai/stable-diffusion-xl-base-1.0

# Устройство для генерации изображений: 'cuda' для GPU, 'cpu' для CPU, или оставьте пустым для автоопределения
# Если FORCE_CPU=true, GPU будет недоступен даже при указании 'cuda'
STABLE_DIFFUSION_DEVICE=cuda

# Параметры генерации (опционально, используются значения по умолчанию)
# STABLE_DIFFUSION_STEPS=30
# STABLE_DIFFUSION_GUIDANCE_SCALE=7.5
# STABLE_DIFFUSION_WIDTH=640
# STABLE_DIFFUSION_HEIGHT=640

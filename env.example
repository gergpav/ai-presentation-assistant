# Backend Configuration
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:postgres@db:5432/ai_presentation
DATABASE_URL_SYNC=postgresql://postgres:postgres@db:5432/ai_presentation
APP_PORT=8001

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CUDA/GPU Configuration (по умолчанию CPU)
# FORCE_CPU=true - использовать CPU вместо GPU (рекомендуется для sm_120 и несовместимых GPU)
# FORCE_CPU=false - попытаться использовать GPU если доступен
FORCE_CPU=true

# LLM Model Configuration
# LLM_MODEL - модель для генерации (рекомендуется 3B для CPU, 7B для GPU)
# По умолчанию Qwen/Qwen2.5-3B-Instruct (быстрее в 2-3 раза на CPU)
# Можно изменить на Qwen/Qwen2.5-7B-Instruct если есть GPU или мощный CPU
# LLM_MODEL=Qwen/Qwen2.5-3B-Instruct

# LLM Generation Configuration
# LLM_GENERATION_TIMEOUT_SEC - таймаут для генерации контента слайда (секунды)
# По умолчанию 600 секунд (10 минут) для CPU генерации
# Для GPU можно уменьшить до 180-300 секунд
LLM_GENERATION_TIMEOUT_SEC=600

# MAX_NEW_TOKENS - максимальное количество токенов для генерации
# По умолчанию 60 для быстрой генерации на CPU
# Для 3B модели: 60-80 токенов оптимально
# Для 7B модели на CPU: 50-60 токенов
# Для GPU: можно увеличить до 100-150
# MAX_NEW_TOKENS=60

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_BASE_URL=http://localhost:8001
